# USB OTG/Gadget mode support for Allwinner H618
CONFIG_USB_SUNXI_HCI=y
CONFIG_USB_DWC3=y
CONFIG_USB_DWC3_HOST=y
CONFIG_USB_DWC3_GADGET=y
CONFIG_USB_GADGET=y
CONFIG_USB_GADGET_VBUS_DRAW=500
CONFIG_USB_CONFIGFS=y
CONFIG_USB_CONFIGFS_UEVENT=y
CONFIG_USB_CONFIGFS_F_ACC=y
CONFIG_USB_CONFIGFS_OBEX=y
CONFIG_USB_CONFIGFS_RNDIS=y
CONFIG_USB_CONFIGFS_MASS_STORAGE=y

# WiFi support for RTL8723CS with enhanced features
CONFIG_RTL8723CS=y
CONFIG_STAGING=y
CONFIG_REALTEK_PHY=y
CONFIG_MAC80211=y
CONFIG_CFG80211=y
CONFIG_NL80211_TESTMODE=y
CONFIG_MAC80211_MESH=y
CONFIG_MAC80211_LEDS=y
CONFIG_CFG80211_WEXT=y

# Enable advanced WiFi features
CONFIG_WLAN=y
CONFIG_WIRELESS=y
CONFIG_WEXT_CORE=y
CONFIG_WEXT_PROC=y
CONFIG_CFG80211_DEBUGFS=y

# Enhanced WiFi management
CONFIG_MAC80211_DEBUGFS=y
CONFIG_MAC80211_HWSIM=m
CONFIG_MAC80211_DRIVER_API_TRACER=y
CONFIG_MAC80211_DEBUG_MENU=y
CONFIG_RFKILL=y
CONFIG_RFKILL_INPUT=y

# Enable 802.11ac/ax support
CONFIG_MAC80211_RC_MINSTREL_VHT=y
CONFIG_WLAN_VENDOR_REALTEK=y

# Enable multiple PHY support
CONFIG_MAC80211_MULTI_PHY=y

# Optimize power settings
CONFIG_PM_ADVANCED_DEBUG=y
CONFIG_PM_DEVFREQ=y
CONFIG_REGULATOR=y
CONFIG_REGULATOR_FIXED_VOLTAGE=y

# QoS support
CONFIG_NET_SCHED=y
CONFIG_NET_SCH_HTB=y
CONFIG_NET_SCH_PRIO=y
CONFIG_NET_SCH_MULTIQ=y
CONFIG_NET_SCH_FQ_CODEL=y
CONFIG_NET_CLS_FW=y

# Bluetooth support with optimizations for Orange Pi's better radio
CONFIG_BT=y
CONFIG_BT_BREDR=y
CONFIG_BT_LE=y
CONFIG_BT_HCIUART=y
CONFIG_BT_HCIUART_RTL=y
CONFIG_BT_HCIUART_SERDEV=y
CONFIG_BT_HCIUART_H4=y
CONFIG_BT_HCIUART_3WIRE=y

# Enhanced Bluetooth power settings
CONFIG_BT_POWERED=y
CONFIG_BT_HCIVHCI=y
CONFIG_BT_MTKUART=y

# Power saving mode optimization
CONFIG_PM=y  
CONFIG_PM_RUNTIME=y
CONFIG_PM_ADVANCED_DEBUG=y
CONFIG_REGULATOR=y